model Cotton {
  id       String  @id @default(cuid())
  name     String
  code     String  @unique
  vendorId String
  vendor   Vendor  @relation(fields: [vendorId], references: [id], onDelete: Cascade)
  userId   String?
  user     User?   @relation(fields: [userId], references: [id], onDelete: Cascade)

