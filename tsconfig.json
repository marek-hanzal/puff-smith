{
	"compilerOptions": {
		"target": "ES2021",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"useDefineForClassFields": true,
		"forceConsistentCasingInFileNames": true,
		"disableSolutionSearching": true,
		"checkJs": true,
		"diagnostics": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "ES2020",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"baseUrl": "src",
		"paths": {
			"@/puff-smith": [
				"."
			],
			"@/puff-smith/*": [
				"./*"
			],
			"@/sdk/*": [
				"./sdk/*"
			]
		},
		"incremental": true
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx"
	],
	"exclude": [
		"node_modules",
		"tmp"
	]
}
